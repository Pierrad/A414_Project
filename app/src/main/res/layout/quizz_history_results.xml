<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quizzResultsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="..."
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quizzResultsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="..."
            android:textAlignment="center"
            android:textColor="@color/history"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/quizzListResults"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="50dp" />

        <Button
            android:id="@+id/quizzResultsBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/history"
            android:onClick="goBackToDashboard"
            android:text="Quitter" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>